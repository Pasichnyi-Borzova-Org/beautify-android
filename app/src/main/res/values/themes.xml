<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Beautify" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/white</item>
        <!-- View theme -->
        <item name="navigationIcon">@drawable/abc_ic_ab_back_material</item>
        <!-- Dialog theme -->
        <item name="android:datePickerDialogTheme">?attr/alertDialogTheme</item>
        <item name="android:timePickerDialogTheme">?attr/alertDialogTheme</item>
        <item name="dialogTheme">?attr/alertDialogTheme</item>
        <item name="alertDialogTheme">@style/Theme.Beautify.Dialog.Alert</item>
        <item name="materialAlertDialogTheme">@style/Theme.Beautify.Dialog</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Beautify.BottomSheetDialog</item>
    </style>

    <style name="Theme.Beautify.Animation">
        <item name="enterAnim">@android:anim/fade_in</item>
        <item name="exitAnim">@android:anim/fade_out</item>
        <item name="popEnterAnim">@android:anim/fade_in</item>
        <item name="popExitAnim">@android:anim/fade_out</item>
    </style>

    <!-- Theme Dialogs -->

    <style name="Theme.Beautify.Dialog.Alert" parent="Theme.MaterialComponents.DayNight.Dialog.Alert.Bridge">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.Beautify.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog.Bridge">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
    </style>

    <style name="Theme.Beautify.Dialog.Transparent">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Theme.Beautify.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <!-- Color scheme -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item>
        <!-- View theme -->
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <style name="Theme.Beautify.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/color_primary</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Beautify</item>
    </style>


</resources>